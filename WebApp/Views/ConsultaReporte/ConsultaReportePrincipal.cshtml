                            new SelectListItem() {Text = "Codigo_5", Value = "5"},
                            new SelectListItem() {Text = "Codigo_6", Value = "6"},
                            new SelectListItem() {Text = "Codigo_7", Value = "7"},
                            new SelectListItem() {Text = "Codigo_8", Value = "8"},
                            new SelectListItem() {Text = "Codigo_9", Value = "9"},
                            new SelectListItem() {Text = "Codigo_10", Value = "10"},
                            new SelectListItem() {Text = "Codigo_11", Value = "11"},
                            new SelectListItem() {Text = "Codigo_12", Value = "12"},
                            new SelectListItem() {Text = "Codigo_13", Value = "13"},
                            new SelectListItem() {Text = "Codigo_15", Value = "15"},
                            new SelectListItem() {Text = "Codigo_16", Value = "16"},
                            new SelectListItem() {Text = "Codigo_17", Value = "17"},
                            new SelectListItem() {Text = "Codigo_18", Value = "18"},
                            new SelectListItem() {Text = "Codigo_19", Value = "19"},
                            new SelectListItem() {Text = "Codigo_20", Value = "20"},
                            new SelectListItem() {Text = "Codigo_21", Value = "21"},
                            new SelectListItem() {Text = "Codigo_22", Value = "22"},
                            new SelectListItem() {Text = "Codigo_23", Value = "23"},
                            new SelectListItem() {Text = "Codigo_24", Value = "24"},
                            new SelectListItem() {Text = "Codigo_25", Value = "25"},
                            new SelectListItem() {Text = "Codigo_26", Value = "26"},
                            new SelectListItem() {Text = "Codigo_27", Value = "27"},
                            new SelectListItem() {Text = "Codigo_28", Value = "28"},
                            new SelectListItem() {Text = "Codigo_29", Value = "29"}
                    }, new { @class = "filterItem" })
