@using Entidades
@model beConsultaReportePrincipal
@{
    ViewBag.Title = null;
    @Html.Partial("ConsultaReportePartial")
}

<script>
    $(function () {
        $(".datepicker").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true,
            minDate: new Date(2017, 0, 1),
            maxDate: new Date(2018, 0, 1),
            showOn: "both",
            buttonText : "<i class='fa fa-calendar'></i>"
        });
    });

    $(document).ready(function () {
        $(".filterItem").selectpicker();
    });
</script>

<!DOCTYPE html>
<html>
<head>
    <link href="~/Assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/DatePicker/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
    <link href="~/Assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/Assets/DropDownList/bootstrap-select.css" rel="stylesheet" />
    <script src="~/Assets/DropDownList/bootstrap-select.js"></script>
    <script src="~/Assets/vendor/jquery/jquery.min.js"></script>
    <title>Pagina Principal</title>
    <style>
        #login-div {
            margin: 35px auto;
        }
    </style>
</head>
<body>
    <div id="login-div">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 well">
                    @using (Html.BeginForm("MostrarTablaConsulta", "ConsultaReporte", FormMethod.Post))
                    {
                        <fieldset>
                            <legend>Página Principal</legend>
                            <div>
                                <div class="form-group">
                                    <div>@Html.LabelFor(model => model.TablaID)</div>
